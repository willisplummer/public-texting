html
  head
    title #{participants[0]}, #{participants[1]}
    meta(name='description' content='public texting')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/css/styles.css')
    link(rel='icon', type='image/png', href='/assets/favicon-bubble.png')

  body
   .homecredit2
     a.grey(href='#end') ↓ &nbsp &nbsp
     a.grey(href='https://public-texting.herokuapp.com/') ←
     
   .textbox
     .creditbar
       .leftcredit #{participants[0]}
       .rightcredit #{participants[1]}  
     ul
       each msg in messages
         - var classname = participants[0] === msg.sender_name ? 'left' : 'right'
             span(class=classname).stamp #{msg.created_at}
             
             if (!!msg.media_type)
               li(class=classname)
                 img(src=msg.media_url)
             else
               li(class=classname)
                each msgpart in msg.body
                 if(msgpart.type === 'text')
                  span #{msgpart.body}
                 else
                  a(href=msgpart.body) #{msgpart.body}
               
               
             
     br
     img#dots(src='/assets/dots.gif')
     br
     p#end
         
